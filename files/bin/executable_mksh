#!/usr/bin/env bash

set -e
set -u
set -o pipefail

FILE=$1

if [ ! $# -eq 1 ]; then
  echo 'mksh takes one argument' 1>&2
  exit 1
elif [ -e "$1" ]; then
  echo "${FILE} already exists" 1>&2
  exit 1
fi

cat <<EOF > "${FILE}"
#!/usr/bin/env bash

set -e
set -u
set -o pipefail

EOF

chmod u+x "${FILE}"

"${EDITOR}" "${FILE}"
