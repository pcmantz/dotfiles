#
# gitconfig
#
# ini for git
#

[user]
    name   = Paul C. Mantz
    email  = pcmantz@gmail.com
    editor = ect

[color]
    diff        = auto
    status      = auto
    branch      = auto
    interactive = auto
    ui          = true
    pager       = true

[core]
    excludesfile = ~/.gitignore

[alias]

    # basic command shortcuts
    st  = status
    co  = checkout
    br  = branch
    fp  = format-patch
    rmt = remote

    # add shortcuts
    a  = add
    ap = add --patch
    ai = add --interactive

    # commit shortcuts
    ci = commit
    ca = commit --amend

    # diff shortcuts
    d   = diff --patience
    dc  = diff --patience --cached

    # reset shortcuts
    rss = reset --soft
    rsm = reset --mixed
    rsh = reset --hard

    # rebase shortcuts
    rb  = rebase
    rbi = rebase --interactive
    rbc = rebase --continue

    # log shortcuts
    lgo = log --graph --oneline

    who    = shortlog -s --
    whois  = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author =\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short


# Local Variables:
# mode: conf-unix
# End:
